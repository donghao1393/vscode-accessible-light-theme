{
  // ===== 无障碍主题推荐设置 =====
  // 将这些设置添加到你的 VS Code settings.json 中
  
  // === 基础无障碍设置 ===
  "editor.accessibilitySupport": "auto",
  "accessibility.signals.lineHasError.sound": "on",
  "accessibility.signals.lineHasWarning.sound": "on",
  "accessibility.signals.lineHasBreakpoint.sound": "on",
  "accessibility.signals.terminalCommandFailed.sound": "on",
  
  // === 编辑器视觉增强 ===
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.fontWeight": "400",
  "editor.cursorWidth": 3,
  "editor.cursorBlinking": "solid",
  "editor.renderLineHighlight": "all",
  "editor.occurrencesHighlight": true,
  "editor.selectionHighlight": true,
  
  // === 括号和缩进增强 ===
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 120],
  
  // === 终端无障碍设置 ===
  "terminal.integrated.minimumContrastRatio": 4.5,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.accessibilitySupport": "on",
  "terminal.integrated.scrollback": 10000,
  
  // === 小地图和滚动条 ===
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontal": "visible",
  
  // === 搜索和查找 ===
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "editor.find.addExtraSpaceOnTop": true,
  
  // === 工作台增强 ===
  "workbench.colorTheme": "Accessible Light",
  "workbench.tree.indent": 20,
  "workbench.list.smoothScrolling": false,
  "workbench.reduceMotion": "on",
  
  // === 主题特定颜色自定义 ===
  "workbench.colorCustomizations": {
    "[Accessible Light]": {
      // 增强焦点指示
      "focusBorder": "#dc2626",
      "editorCursor.foreground": "#dc2626",
      
      // 增强错误和警告可见性
      "editorError.foreground": "#dc2626",
      "editorWarning.foreground": "#c2410c",
      "editorInfo.foreground": "#2563eb",
      
      // 增强选择和高亮
      "editor.selectionBackground": "#dc262620",
      "editor.selectionHighlightBackground": "#dc262615",
      "editor.findMatchBackground": "#c2410c40",
      "editor.findMatchHighlightBackground": "#c2410c20"
    }
  },
  
  // === 字体样式自定义（可选） ===
  "editor.tokenColorCustomizations": {
    "[Accessible Light]": {
      "textMateRules": [
        {
          "scope": "comment",
          "settings": {
            "fontStyle": "italic",
            "foreground": "#6b7280"
          }
        },
        {
          "scope": "string",
          "settings": {
            "fontStyle": "italic",
            "foreground": "#047857"
          }
        },
        {
          "scope": "keyword",
          "settings": {
            "fontStyle": "bold",
            "foreground": "#dc2626"
          }
        },
        {
          "scope": "constant.numeric",
          "settings": {
            "fontStyle": "bold",
            "foreground": "#c2410c"
          }
        },
        {
          "scope": "entity.name.function",
          "settings": {
            "fontStyle": "bold",
            "foreground": "#2563eb"
          }
        },
        {
          "scope": "entity.name.type",
          "settings": {
            "fontStyle": "underline",
            "foreground": "#c2410c"
          }
        }
      ]
    }
  },
  
  // === 特定用户群体设置 ===
  
  // 屏幕阅读器用户额外设置
  // "editor.accessibilitySupport": "on",
  // "editor.tabFocusMode": true,
  // "terminal.integrated.accessibilitySupport": "on",
  
  // 低视力用户额外设置
  // "editor.fontSize": 18,
  // "editor.lineHeight": 2.0,
  // "terminal.integrated.fontSize": 16,
  // "zoom.level": 1,
  
  // 色盲用户额外设置
  // "git.decorations.enabled": true,
  // "scm.diffDecorations": "all",
  // "editor.renderControlCharacters": true,
  
  // === 扩展推荐设置 ===
  "extensions.ignoreRecommendations": false,
  
  // Error Lens 扩展设置（如果安装）
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "errorLens.fontSize": "14px",
  
  // GitLens 扩展设置（如果安装）
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.enabled": true,
  
  // === 性能优化 ===
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  }
}
